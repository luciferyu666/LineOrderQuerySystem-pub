##############################################
# ✅ LINE Bot 設定
##############################################
LINE_CHANNEL_ACCESS_TOKEN=YOUR_LINE_CHANNEL_ACCESS_TOKEN
LINE_CHANNEL_SECRET=YOUR_LINE_CHANNEL_SECRET

##############################################
# ✅ Shopify API 設定
##############################################
SHOPIFY_STORE_DOMAIN=yourshop.myshopify.com
SHOPIFY_API_KEY=YOUR_SHOPIFY_API_KEY            # 若使用 GraphQL 可省略
SHOPIFY_ACCESS_TOKEN=YOUR_SHOPIFY_ADMIN_API_TOKEN

##############################################
# ✅ PostgreSQL 資料庫連線字串
##############################################
DB_URL=postgresql://user:password@localhost:5432/your_database_name

##############################################
# ✅ Rich Menu ID（部署後回填）
##############################################
RICH_MENU_BOUND_ID=richmenu-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
RICH_MENU_UNBOUND_ID=richmenu-yyyyyyyyyyyyyyyyyyyyyyyyyyyy

##############################################
# ✅ Flex Message 模板選項（進階使用）
##############################################
FLEX_STYLE_THEME=default                         # 可設定 dark / light / default

##############################################
# ✅ Puppeteer 設定（若未啟用爬蟲模組可跳過下載）
##############################################
PUPPETEER_SKIP_DOWNLOAD=true

##############################################
# ✅ Node.js 環境設定
##############################################
NODE_ENV=development
PORT=3000

